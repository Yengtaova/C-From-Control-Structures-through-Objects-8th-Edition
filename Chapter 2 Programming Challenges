    const float STATE_SALES_TAX = 0.04,
                COUNTY_SALES_TAX = 0.02;
    float purchaseAmount = 95;

    float totalSalesTax = purchaseAmount * (STATE_SALES_TAX + COUNTY_SALES_TAX);

